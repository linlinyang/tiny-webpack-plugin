{
    "compilerOptions": {
      "outDir": "./lib/",
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "Node",
      "allowJs": true,
      "esModuleInterop": true,
      "declaration": true,
      "strict": true,
      "sourceMap": true,
      "noImplicitThis": false,
      "resolveJsonModule": true,
      "types": [
        "node",
        "webpack"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}